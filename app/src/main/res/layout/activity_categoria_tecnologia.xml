<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.simposio.activities.CategoriaTecnologia">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>


    <Button
        android:id="@+id/btndiauno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dia1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="139dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="78dp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnDiados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dia2"
        android:layout_alignBaseline="@+id/btndiauno"
        android:layout_alignBottom="@+id/btndiauno"
        android:layout_toRightOf="@+id/btndiauno"
        android:layout_toEndOf="@+id/btndiauno"
        android:textAllCaps="false"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <Button
        android:id="@+id/btnDiatres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnDiados"
        android:layout_marginEnd="15dp"
        android:textAllCaps="false"
        android:layout_marginRight="15dp"
        android:text="@string/dia3" />

    <TextView
        android:id="@+id/tv_descripcion_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:text="@string/des"
        android:layout_below="@+id/btndiauno"
        android:layout_alignLeft="@+id/btndiauno"
        android:layout_alignStart="@+id/btndiauno" />

    <TextView
        android:id="@+id/tv_dia2_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_descripcion_dia"
        android:layout_alignStart="@+id/tv_descripcion_dia"
        android:layout_below="@+id/tv_descripcion_dia"
        android:layout_marginTop="23dp"
        android:text="@string/des_dia2" />

    <TextView
        android:id="@+id/tv_dia3_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/des_dia_3"
        android:layout_below="@+id/tv_dia2_des"
        android:layout_alignLeft="@+id/tv_dia2_des"
        android:layout_alignStart="@+id/tv_dia2_des" />


</RelativeLayout>
